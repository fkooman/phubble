<!DOCTYPE html>

<html lang="en">
{% include 'head.twig' %}
<body>
    <div id="container">
        {% include 'header.twig' %}

        {% if space.getSecret %}
            <h2>{{ space.getName|e }} (secret)</h2>
        {% else %}
            <h2>{{ space.getName|e }}</h2>
        {% endif %}

        {% if indieInfo and message.getAuthor.getName == indieInfo.getUserId %}
        <form method="post" action="{{ message.id|e }}">
            <input type="hidden" name="_METHOD" value="DELETE">
            <input type="submit" class="err" value="Delete">
        </form>
        {% endif %}

        <table class="message h-entry">
            <tr>
                <th>
                    <a class="p-author" href="{{ message.getAuthor.getName|e }}">{{ message.getAuthor.getName|e }}</a>
                    <span class="date dt-published">{{ message.getPosted|e|date("Y-m-d H:i:s T") }}</span>
                </th>
            </tr>
            <tr>
                <td class="e-content">{{ message.getContent|raw }}</td>
            </tr>
        </table>

        {% include 'footer.twig' %}
    </div> <!-- /container -->
</body>
</html>
